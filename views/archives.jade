extends layout

block content
  div.content-header
    h2= archive.sub_title
  div.content-body
    - each article in posts.list
      div.article-preview
        h3
          a(href='/p/' + article.path, target='_blank')= article.title
          span
            small.pull-right= article.date
        div.article-preview-content !{article.summary}
